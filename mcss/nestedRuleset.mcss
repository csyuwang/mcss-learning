.m-home{
    display: block;
    div, ul{
        + div{
            margin-top: 20px;
        }
        border: 2px solid #ccc;
        > a{
            color: #f00;
            &:hover, &:link{
               text-decoration: none;
            }
            ~ span{
                display: block;
            }
        }
    }
}
